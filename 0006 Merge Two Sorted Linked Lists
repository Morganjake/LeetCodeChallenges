class Solution(object):
    # I have no idea how this works
    def mergeTwoLists(self, list1, list2):

        LinkedList = ListNode()
        List = LinkedList

        while list1 and list2:
            if list1.val < list2.val:
                List.next = list1
                list1 = list1.next
            else:
                List.next = list2
                list2 = list2.next
            List = List.next

        if list1:
            List.next = list1
        elif list2:
            List.next = list2

        return LinkedList.next
