class Solution(object):
    def mergeTwoLists(self, list1, list2):
        LinkedList = ListNode()
        List = LinkedList

        while list1 != None and list2 != None:
            if list1.val < list2.val:
                List.next = list1
                list1 = list1.next
            else:
                List.next = list2
                list2 = list2.next
            List = List.next

        if list1 != None:
            List.next = list1
        elif list2 != None:
            List.next = list2
